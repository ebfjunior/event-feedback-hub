// Prisma schema for Event Feedback HUB

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String     @id @default(uuid()) @db.Uuid
  name      String     @unique
  feedbacks Feedback[]
  summary   EventSummary?

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Feedback {
  id        String   @id @default(uuid()) @db.Uuid
  eventId   String   @db.Uuid
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  rating    Int
  text      String
  createdAt DateTime @default(now())

  @@index([eventId])
  @@index([createdAt, id(sort: Desc)])
  @@index([rating(sort: Desc), createdAt(sort: Desc), id(sort: Desc)])
}

model EventSummary {
  eventId   String   @id @db.Uuid
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  summary   String
  updatedAt DateTime @updatedAt
}


